<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".whether">

    <TextView android:id="@+id/voll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="150dp"/>

    <TextView android:id="@+id/region" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/country" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp"/>

    <TextView android:id="@+id/humidity" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" />

    <TextView android:id="@+id/wind" android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>